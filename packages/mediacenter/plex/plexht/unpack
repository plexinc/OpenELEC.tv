. config/options $1

#echo "### Applying architecture based patches ###"

#if [ ! $TARGET_ARCH = arm ]; then
#  for patch in `ls $PKG_DIR/patches.x86`; do
#    cat $PKG_DIR/patches.x86/$patch | patch -d \
#      `echo $PKG_BUILD | cut -f1 -d\ ` -p1
#  done
#fi

# Unpack SRC
cd $BUILD

# Use PHT HEAD or Public
if [ "$PHT_HEAD" = "HEAD" ]; then
  if [ ! -d /data/jenkins/pht-openelec/plexht-HEAD ]; then
    git clone git@github.com:plexinc/plex.git /data/jenkins/pht-openelec/plexht-HEAD
    cp -R /data/jenkins/pht-openelec/plexht-HEAD .
  else
    git --git-dir=/data/jenkins/pht-openelec/plexht-HEAD/.git fetch && git --git-dir=/data/jenkins/pht-openelec/plexht-HEAD/.git reset --hard && git --git-dir=/data/jenkins/pht-openelec/plexht-HEAD/.git pull 
    cp -R /data/jenkins/pht-openelec/plexht-HEAD .
  fi
else
  if [ ! -d /data/jenkins/pht-openelec/plexht-PUBLIC ]; then
    git clone https://github.com/plexinc/plex-home-theater-public.git /data/jenkins/pht-openelec/plexht-PUBLIC
    cp -R /data/jenkins/pht-openelec/plexht-PUBLIC .
  else
    git --git-dir=/data/jenkins/pht-openelec/plexht-PUBLIC/.git fetch && git --git-dir=/data/jenkins/pht-openelec/plexht-PUBLIC/.git reset --hard && git --git-dir=/data/jenkins/pht-openelec/plexht-PUBLIC/.git pull
    cp -R /data/jenkins/pht-openelec/plexht-PUBLIC .
  fi
  patch $PKG_NAME-$PKG_VERSION/CMakeLists.txt < $PKG_DIR/patches/cmakelists.patch
  patch $PKG_NAME-$PKG_VERSION/plex/CMakeModules/PlatformConfigLINUX.cmake < $PKG_DIR/patches/platformconfig.patch
fi

patch $PKG_NAME-$PKG_VERSION/addons/skin.plex/720p/Font.xml < $PKG_DIR/patches/fontfix.patch
patch $PKG_NAME-$PKG_VERSION/addons/skin.plex/720p/LeftSideMenu.xml < $PKG_DIR/patches/skinpht.patch

if [ $PROJECT = Plex-Intel-Pioneer ]; then
patch $PKG_NAME-$PKG_VERSION/xbmc/cores/AudioEngine/Engines/SoftAE/SoftAE.cpp < $PKG_DIR/patches/AE-Intel-Pioneer.patch
fi

cp -f $PKG_NAME-$PKG_VERSION/plex/Resources/Splash-OpenELEC.png $PKG_NAME-$PKG_VERSION/plex/Resources/Splash.png
